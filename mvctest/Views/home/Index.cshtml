@model IEnumerable<mvctest.Models.product>

@{
    ViewBag.Title = "待辦事項";
}

<h2>備忘錄</h2>

<p>
    @Html.ActionLink("事項新增", "Create")
</p>
<table class="table">
    <tr>
        <th>
            編號
        </th>
        <th>
            名稱
        </th>
        <th>
            緊急度
        </th>
        <th>
            日期
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.level)
        </td>
        <td>
            @DateTime.Parse(item.date.ToString()).ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("刪除", "Delete", new { id=item.Id },new { onclick="return confirm('確定刪掉?')",@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
